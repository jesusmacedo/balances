<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jesusmacedo.balances.fragments.NewRecordDialogFragment">

    <co.ceryle.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/sbg_record_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sbg_animateSelector="linear"
        app:sbg_animateSelectorDuration="500"
        app:sbg_backgroundColor="@color/colorSecondary"
        app:sbg_dividerColor="@color/colorAccent"
        android:dividerPadding="10dp"
        app:sbg_dividerSize="1dp"
        app:sbg_position="1"
        app:sbg_radius="2dp"
        app:sbg_ripple="true"
        app:sbg_rippleColor="@color/colorSecondaryDark"
        app:sbg_selectorColor="@color/colorAccent"
        app:sbg_selectorTextColor="@android:color/white"
        app:sbg_shadow="true"
        app:sbg_shadowElevation="3dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="15dp"
            android:text="Income"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="15dp"
            android:text="Expense"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="15dp"
            android:text="Transfer"
            android:textColor="@android:color/white"/>

    </co.ceryle.segmentedbutton.SegmentedButtonGroup>

    <LinearLayout
        android:id="@+id/ll_new_record_amount_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sbg_record_types">

        <TextView
            android:id="@+id/tv_new_record_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_new_record_sign"
            android:textSize="@dimen/size_new_record_sign"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_weight=".2"/>

        <EditText
            android:id="@+id/et_new_record_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:layout_weight=".8"
            android:hint="@string/hint_new_record_amount"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_new_record_amount_container"
        card_view:contentPadding="@dimen/padding_overview_card_view">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_new_record_card"
                android:textColor="@android:color/darker_gray"/>
            <Spinner
                android:id="@+id/s_new_record_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_b_spinners_new_card"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_new_record_category"
                android:textColor="@android:color/darker_gray"/>
            <Spinner
                android:id="@+id/s_new_record_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_b_spinners_new_card"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_new_record_date"
                android:textColor="@android:color/darker_gray"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ib_new_record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_perm_contact_calendar_black_36dp"
                    android:layout_weight=".1"/>
                <TextView
                    android:id="@+id/tv_new_record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/label_new_record_date"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_weight=".5"/>

                <ImageButton
                    android:id="@+id/ib_new_record_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_access_time_black_36dp"
                    android:layout_weight=".1"/>
                <TextView
                    android:id="@+id/tv_new_record_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/label_new_record_time"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_weight=".3"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_new_record_mif"
                android:textColor="@android:color/darker_gray"/>
            <EditText
                android:id="@+id/et_new_record_mif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_new_record_currency"
                android:textColor="@android:color/darker_gray"/>
            <Spinner
                android:id="@+id/s_new_record_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_b_spinners_new_card"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_new_record_note"
                android:textColor="@android:color/darker_gray"/>
            <EditText
                android:id="@+id/et_new_record_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_save_new_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_save_white_36dp" />

</RelativeLayout>
