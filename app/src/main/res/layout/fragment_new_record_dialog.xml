<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jesusmacedo.balances.fragments.NewRecordDialogFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <co.ceryle.segmentedbutton.SegmentedButtonGroup
            android:id="@+id/sbg_record_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sbg_animateSelector="linear"
            app:sbg_animateSelectorDuration="500"
            app:sbg_backgroundColor="@color/colorSecondary"
            app:sbg_dividerColor="@color/colorAccent"
            android:dividerPadding="10dp"
            app:sbg_dividerSize="1dp"
            app:sbg_position="1"
            app:sbg_radius="2dp"
            app:sbg_ripple="true"
            app:sbg_rippleColor="@color/colorSecondaryDark"
            app:sbg_selectorColor="@color/colorAccent"
            app:sbg_selectorTextColor="@android:color/white"
            app:sbg_shadow="true"
            app:sbg_shadowElevation="3dp"
            app:sbg_shadowMargin="4dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="15dp"
                android:text="Income"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="15dp"
                android:text="Expense"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="15dp"
                android:text="Transfer"
                android:textColor="@android:color/white"/>

        </co.ceryle.segmentedbutton.SegmentedButtonGroup>
    </LinearLayout>

</RelativeLayout>
